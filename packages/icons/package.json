{
  "name": "@republik/icons",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "types": "dist/index.d.ts",
  "main": "./dist/republik-icons.umd.cjs",
  "module": "./dist/republik-icons.js",
  "exports": {
    ".": {
      "import": "./dist/base.js",
      "require": "./dist/base.cjs"
    },
    "./*": {
      "import": "./dist/*.js",
      "require": "./dist/*.cjs",
      "types": "./dist/*.d.ts"
    }
  },
  "scripts": {
    "generate:icons": "svgr --typescript --icon --replace-attr-values '#000=currentColor' --out-dir ./lib/components ./lib/svg",
    "dev": "vite",
    "build": "yarn generate:icons && tsc && vite build"
  },
  "devDependencies": {
    "@svgr/cli": "^6.1.2",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@vitejs/plugin-react": "^3.1.0",
    "path": "^0.12.7",
    "react": "^18.2.0",
    "typescript": "^4.9.3",
    "vite": "^4.1.0",
    "vite-plugin-dts": "^1.7.3"
  },
  "peerDependencies": {
    "react": ">=17.0.0"
  }
}
