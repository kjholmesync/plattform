{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "automerge": false,
  "commitMessagePrefix": "chore(deps): renovate",
  "packageRules": [
    {
      "description": "All Next.js dependencies are updated to the latest minor or patch version.",
      "matchDepPatterns": [
        "next",
        "@next/*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin"
      ]
    },
    {
      "description": "All React dependencies are updated to the latest minor or patch version.",
      "matchDepPatterns": [
        "react",
        "react-dom",
        "@types/react"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "pin"
      ]
    },
    {
      "description": "All testing dependencies are updated to the latest minor or patch version.",
      "matchDepPatterns": [
        "@testing-library/*",
        "@types/jest",
        "@types/testing-library__jest-dom",
        "@types/testing-library__react",
        "jest",
        "jest-dom",
        "react-test-renderer",
        "ts-jest"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch"
      ]
    }
  ]
}
